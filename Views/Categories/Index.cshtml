
<section style="background-color: #eee;">
    @if (TempData.ContainsKey("message"))
    {

        <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
    }
    <div class="container row mx-auto">
        <div class="container text-center d-flex justify-content-between align-items-center">
            <h4 class="mt-4 mb-5"><strong>Categories</strong></h4>
            <div>
                <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Categories/New" role="button">Add Category</a>
            </div>
        </div>

        <div class="row text-center mx-auto">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a asp-action="Show" asp-controller="Categories" asp-route-id="@category.Id">
                        <div class="card product">
                            <div class="bg-image hover-zoom ripple" data-mdb-ripple-color="light">
                                <div>

                                    <div class="d-flex justify-content-between align-items-center h-100 g-3 px-1">
                                        <h5>
                                            <span class="badge bg-primary">New</span><span class="badge bg-success ms-2">Eco</span><span class="badge bg-danger ms-2">-10%</span>
                                        </h5>
                                        
                                        <div>
                                            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@category.Id">
                                                <svg class="rating-star" fill="none" stroke="#FF0000" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
                                                </svg>
                                            </a>
                                            <form method="post" asp-action="Delete" asp-controller="Categories" asp-route-id="@category.Id">
                                                <button type="submit" class="btn btn-no-outline">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="rating-star" stroke="#FF0000">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                                    </svg>
                                                </button>
                                            </form>

                                        </div>

                                    </div>

                                    <div class="hover-overlay">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                <div href="" class="text-reset">
                                    <h5 class="card-title mb-3">@category.CategoryName</h5>
                                </div>

                            </div>
                        </div>
                    </a>

                </div>
            }

        </div>
    </div>
</section>