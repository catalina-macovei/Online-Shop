
<h2>@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.message
    </div>
}

<a class="btn btn-success" href="/Products/Index">Inapoi la produse</a>
<br />
<br />

    @foreach (var category in ViewBag.Categories)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@category.CategoryName</h5>
                <div class=" d-flex justify-content-between">
                    <a class="btn alert-success" href="/Categories/Show/@category.Id">Afisare categorie</a>
                    <a class="btn alert-success" href="/Categories/Edit/@category.Id">Editare categorie</a>
            </div>
          </div>
        </div> 
        <br />
    }

<br />
<a class="btn btn-success" href="/Categories/New">Adauga o noua categorie</a>
<br />
