@model OnlineShop.Models.Category


<section class="d-flex gap-2">
    <div class="w-50 m-5">
        <div class="card product">
            <div class="bg-image hover-zoom ripple" data-mdb-ripple-color="light">
                <div>
                    <div class="hover-overlay">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div href="" class="text-reset">
                    <h5 class="card-title mb-3">@Model.CategoryName</h5>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-between m-2">

                <a class="btn alert-success" href="/Categories/Edit/@Model.Id">Editare categorie</a>

                <form method="post" action="/Categories/Delete/@Model.Id">

                    <button class="btn btn-danger" type="submit">Sterge categoria</button>

                </form>

            </div>
        </>

    </div>

    