
<section style="background-color: #eee;" class="d-flex flex-column align-items-center justify-content-center">
    @if (ViewBag.Message != null)
    {

        <h2 class="alert-success p-3 rounded-3 text-center mt-2">@ViewBag.Message</h2>
    }
    <div class="container row mx-auto">
        <div class="container text-center d-flex justify-content-between align-items-center">
            <h4 class="mt-4 mb-5"><strong>Bestsellers</strong></h4>
            <div class="d-flex flex-column gap-2">
                <div class="d-flex flex-row gap-2">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Products/InReview" role="button">In Review</a>
                    }
                    @if (User.IsInRole("Collaborator"))
                    {
                        <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Products/InProgress" role="button">Pending</a>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Collaborator"))
                    {
                        <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Products/New" role="button">Add Product</a>
                    }
                </div>
                <div class="d-flex flex-row gap-2">
                    <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Carts/Index" role="button">My Cart</a>
                    
                    <a class="btn btn-outline" style="background-color:pink; color:black;" href="/Orders/Index" role="button">My Orders</a>
                </div>
            </div>
        </div>

        <div class="row text-center mx-auto">
            @foreach (var product in ViewBag.Products)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a asp-action="Show" asp-controller="Products" asp-route-id="@product.Id">
                        <div class="card product">
                            <div class="bg-image hover-zoom ripple" data-mdb-ripple-color="light">
                                <img src="@product.PhotoSrc" class="img-fluid w-100" style="object-fit:cover; max-height:200px" />
                                <div>
                                   
                                    <div class="d-flex justify-content-between align-items-center h-100 g-3 px-1">
                                        <h5>
                                            <span class="badge bg-primary">New</span><span class="badge bg-success ms-2">Eco</span><span class="badge bg-danger ms-2">-10%</span>
                                        </h5>
                                        <div class="d-flex align-items-center justify-content-between">
                                            @for(var i = 1; i <= product.Rating; i++)
                                            {
                                                <svg class="rating-star" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                    <path clip-rule="evenodd" fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"></path>
                                                </svg>
                                            }

                                            @for (var i = product.Rating; i < 5; i++)
                                            {
                                                <svg class="rating-star not-filled-star" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"></path>
                                                </svg>
                                            }
                                        </div>
                                        <div>
                                            <a asp-action="Edit" asp-controller="Products" asp-route-id="@product.Id">
                                                <svg class="rating-star" fill="none" stroke="#FF0000" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
                                                </svg>
                                            </a>
                                            <form method="post" asp-action="Delete" asp-controller="Products" asp-route-id="@product.Id">
                                                <button type="submit" class="btn btn-no-outline">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="rating-star" stroke="#FF0000">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                                    </svg>
                                                </button>
                                            </form>

                                        </div>

                                    </div>
                                
                                    <div class="hover-overlay">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                <div href="" class="text-reset">
                                    <h5 class="card-title mb-3">@product.Title</h5>
                                </div>
                                <div><i class="bi bi-person"></i> @product.User.UserName</div>
                                <div href="" class="text-reset">
                                    <p>@product.Category.CategoryName</p>
                                </div>
                                <h6 class="mb-3">
                                    <s>$@(product.Price + 10)</s><strong class="ms-2 text-danger">$@product.Price</strong>
                                </h6>
                            </div>
                        </div>
                    </a>
                   
                </div>
            }
            
        </div>
    </div>

    <div class=" mb-2 ">
        <nav aria-label="Page navigation example" style="color:pink">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" style="color:pink" href="/Products/Index?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                     </a>
                </li>
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item"> <a class="page-link" style="color:pink" href="/Products/Index?page=@i">@(i)</a> </li>
                }
                <li class="page-item">
                    <a class="page-link" style="color:pink" href="/Products/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</section>
