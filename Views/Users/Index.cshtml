
@if (ViewBag.Message != null)
{

    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />
<br />

<div class="row text-center mx-auto">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card" style="height:100%; width: 90%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>


                        @if (@user.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> Nume utilizator: @user.FirstName</p>
                        }


                        @if (@user.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> Prenume utilizator: @user.LastName</p>
                        }


                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div> <a class="btn btn-sm" style="background-color:pink; color:black;" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>

                        <div> <a class="btn btn-sm" style="background-color:pink; color:black;"  href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>

<br />
<br />

