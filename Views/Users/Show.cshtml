@model OnlineShop.Models.ApplicationUser

<section style="background-color: #eee;" class="d-flex flex-column align-items-center justify-content-center">
    <div class="card mt-3" style="height:100%; width: 80%;">

        <div class="card-body d-flex justify-content-between flex-column gap-5">

            <div>
                <p><i class="bi bi-person"> </i> UserName: @Model.UserName</p>

                <p><i class="bi bi-envelope"></i> Email utilizator: @Model.Email</p>

                @if (ViewBag.Roles.Count > 0)
                {
                    <div class="d-flex flex-row items-center gap-3">
                        <p><i class="bi bi-person"> </i> Roluri utilizator:</p>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <span class="rounded-pill mr-2 px-4 py-2" style="background-color:pink; color:black;">@role</span>
                        }
                    </div>

                }



            </div>

            @if ((string)Model.Id != ViewBag.UserCurent)
            {
                @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
                {

                    <button class="btn btn-danger" type="submit">Sterge utilizator</button>

                }
            }
           
        </div>
    </div>
</section>








